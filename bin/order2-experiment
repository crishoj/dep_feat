#!/bin/sh

if [ $# -ne 1 ]; then
    echo 1>&2 Usage: $0 DIR
    exit 127
fi

export MSTPARSER_DIR=vendor/mstparser
export PATH=$PATH:$MSTPARSER_DIR/bin
CORPUS_DIR=$1
MODEL_DIR=models/2nd-order/$CORPUS_DIR
SYSTEM_DIR=$CORPUS_DIR/system
mkdir -p $MODEL_DIR
mkdir -p $SYSTEM_DIR
$MSTPARSER_DIR/bin/mst_parse.sh \
  train train-file:$(echo $CORPUS_DIR/train/*.conll) model-name:$MODEL_DIR/dep.model order:2 \
  test test-file:$(echo $CORPUS_DIR/test/*.conll) output-file:$SYSTEM_DIR/out.conll order:2 \
  eval gold-file:$(echo $CORPUS_DIR/test/*.conll)
